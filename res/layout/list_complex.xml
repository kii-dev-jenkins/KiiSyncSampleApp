<?xml version="1.0" encoding="utf-8"?>
	<!-- list_complex.xml -->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="?android:attr/listPreferredItemHeight"
	android:layout_alignParentTop="true"
	android:orientation="horizontal"
	android:paddingRight="2dip">
	<TextView
		android:id="@+id/padding_view"
		android:layout_width="?android:attr/expandableListPreferredItemPaddingLeft"
		android:layout_height="fill_parent"
		android:focusable="false"
		android:focusableInTouchMode="false" />
	<RelativeLayout
		android:id="@+id/list_complex_icon_main"
		android:layout_width="48dip"
		android:layout_height="48dip"
		android:layout_marginLeft="7dip"
		android:layout_marginTop="8dip"
		android:focusable="false"
		android:focusableInTouchMode="false">

		<ImageView
			android:id="@+id/list_complex_icon"
			android:layout_width="48dip"
			android:layout_height="48dip"
			android:scaleType="centerInside"
			android:focusable="false"
			android:focusableInTouchMode="false" />

		<ImageView
			android:id="@+id/list_sync_status_icon"
			android:layout_width="22dip"
			android:layout_height="22dip"
			android:scaleType="fitCenter"
			android:src="@drawable/sync_sync"
			android:visibility="gone"
			android:focusable="false"
			android:focusableInTouchMode="false" />
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/list_complex_2lines_text"
		android:layout_width="0dip"
		android:layout_height="fill_parent"
		android:layout_marginLeft="7dip"
		android:layout_weight="1"
		android:orientation="vertical"
		android:focusable="false"
		android:focusableInTouchMode="false">

		<TextView
			android:id="@+id/list_complex_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_marginRight="5dip"
			android:layout_marginTop="6dip"
			android:ellipsize="end"
			android:paddingRight="33dip"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:focusable="false"
			android:focusableInTouchMode="false" />

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/list_complex_title"
			android:layout_marginTop="2dip"
			android:orientation="horizontal"
			android:focusable="false"
			android:focusableInTouchMode="false">

			<TextView
				android:id="@+id/list_complex_caption"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="0.6"
				android:ellipsize="end"
				android:paddingRight="33dip"
				android:singleLine="true"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:focusable="false"
				android:focusableInTouchMode="false" />

			<TextView
				android:id="@+id/list_complex_sub_caption"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_marginLeft="5dip"
				android:layout_weight="0.4"
				android:ellipsize="end"
				android:gravity="right"
				android:paddingRight="3dip"
				android:singleLine="true"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:visibility="gone"
				android:focusable="false"
				android:focusableInTouchMode="false" />
		</LinearLayout>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/list_complex_1line_text"
		android:layout_width="0dip"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:paddingLeft="7dip"
		android:paddingRight="33dip"
		android:visibility="gone"
		android:focusable="false"
		android:focusableInTouchMode="false">

		<TextView
			android:id="@+id/list_complex_1line_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:focusable="false"
			android:focusableInTouchMode="false" />
	</RelativeLayout>

	<ImageView
		android:id="@+id/list_complex_more_button"
		android:layout_width="40dip"
		android:layout_height="40dip"
		android:layout_gravity="center_vertical"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="00dip"
		android:layout_marginRight="5dip"
		android:layout_marginTop="00dip"
		android:gravity="center_vertical"
		android:paddingBottom="0dip"
		android:paddingLeft="0dip"
		android:paddingTop="0dip"
		android:scaleType="fitCenter"
		android:src="@drawable/image_more"
		android:visibility="gone"
		android:focusable="false"
        android:focusableInTouchMode="false" />

</LinearLayout>